class Conversation{
+id :: int
+Nom :: str
+Date :: Date
+liste_echange :: list[ech]
+personnalisation :: str
+lisi_id_utilisateur
+Afficher_conv()
}
    class Conversation_Service {
        +Créer(str) Conversation
        +rechercher(str) Conversation
        +Accéder(str) Conversation
        +lister_conv(str)  list[conv]
        + Recherche_message(str) ech
        + Envoyer_requête(str, list[ech])  str
        + Ajouter_utilisateur(str)  str
        + Exporter_conversation() Conversation
    }

class Conversation_DAO{
+Creer(str) Conversation
+trouver_par_id_conv(int) Conversation
+rechercher_echange() Echange
+lister_conversation() list[Conv]
+parametre_conv() Conversation
+recherche_date(Date) Ech
+Rechercher_mat_clef() Ech}

