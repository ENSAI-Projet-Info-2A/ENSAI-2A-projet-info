classDiagram
direction TB

    class Statistiques {
        +nb_conversations : int
        +nb_messages : int
        +heures_utilisation : float
        +sujets_plus_frequents : list~string~
        -_sujet_counts : Counter
        +ajouter_sujet(sujet: str) : None
        +ajouter_sujets(sujets: Iterable[str]) : None
        +recalculer_sujets(k: int) : list~string~
    }

    class Conversation {
        +id : int
        +nom : str
        +date_creation : datetime
        +personnalisation : str
        +echanges : list~Echange~
        +ajouter_echange(e: Echange) : None
        +afficher_conv() : str
    }

    class Utilisateur {
        +id : int
        +pseudo : str
        -password_hash : str
        +conversations : list~Conversation~
        +set_password(mdp: str) : None
        +verifier_password(mdp: str) : bool
        +ajouter_conversation(c: Conversation) : None
        +supprimer_conversation(c: Conversation) : None
        +afficher_utilisateur() : str
        +from_plain_password(pseudo: str, mdp: str, id: int) : Utilisateur
    }

    class Echange {
        +id : int
        +agent : str
        +message : str
        +date_msg : datetime
        +agent_name : str
        +afficher_echange() : string
    }

    %%==========================
    %% RELATIONS
    %%==========================

    Utilisateur "1" o-- "0..*" Conversation : poss√®de
    Conversation "1" o-- "0..*" Echange : contient

